{
  "mcpServers": {
    "azure-mcp": {
      "tools": [
        "*"
      ],
      "type": "local",
      "command": "npx",
      "args": [
        "-y",
        "@azure/mcp@latest",
        "server",
        "start"
      ]
    },
    "context7": {
      "tools": [
        "query-docs",
        "resolve-library-id"
      ],
      "type": "http",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      }
    },
    "microsoft-learn": {
      "tools": [
        "*"
      ],
      "type": "http",
      "url": "https://learn.microsoft.com/api/mcp",
      "headers": {}
    },
    "playwright": {
      "tools": [
        "*"
      ],
      "type": "local",
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--browser",
        "msedge"
      ]
    },
    "chrome-devtools": {
      "type": "local",
      "command": "npx",
      "tools": [
        "*"
      ],
      "args": [
        "-y",
        "chrome-devtools-mcp@latest"
      ],
      "env": {}
    },
    "ascii-motion-mcp": {
      "type": "local",
      "command": "node",
      "tools": [
        "*"
      ],
      "args": [
        "C:\\Users\\erichansen\\repos\\ascii-motion-mcp\\dist\\index.js",
        "--live",
        "--token",
        "${ASCII_MOTION_TOKEN}",
        "--project-dir",
        "C:\\Users\\erichansen\\copilot\\ascii-motion"
      ]
    }
  }
}
